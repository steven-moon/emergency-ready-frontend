{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function",
          "import",
          "media",
          "supports",
          "keyframes",
          "charset",
          "namespace",
          "page",
          "font-face",
          "viewport",
          "document"
        ]
      }
    ],
    "no-invalid-double-slash-comments": null,
    "at-rule-empty-line-before": null,
    "declaration-empty-line-before": null,
    "rule-empty-line-before": null
  }
}
